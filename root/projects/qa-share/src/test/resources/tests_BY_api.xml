<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="API Tests for Sprint BY" parallel="tests" thread-count="3">

    <groups>
        <run>
            <exclude name="DataPrep.*"/>
            <exclude name="Download"/>
            <exclude name="NonGrid"/>
            <exclude name="CloudOnly"/>
            <exclude name=".*Bug.*"/>
        </run>
    </groups>

    <listeners>
        <listener class-name="org.alfresco.webdrone.testng.listener.ScreenshotHTMLReporter"/>
    </listeners>

    <test name="Sites API test">
        <classes>
            <class name="org.alfresco.share.api.SitesAPITests">
                <methods>
                    <include name="AONE_14265"/>
                    <include name="AONE_14267"/>
                    <include name="AONE_14281"/>
                    <exclude name=".*"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Comments API Tests">
        <classes>
            <class name="org.alfresco.share.api.CommentsAPITests">
                <methods>
                    <include name="AONE_14235"/>
                    <exclude name=".*"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="CmisBrowserTests">
        <classes>
            <class name="org.alfresco.share.api.cmis.CmisBrowserTests"/>
        </classes>
    </test>

    <test name="NodesAPITests">
        <classes>
            <class name="org.alfresco.share.api.NodesAPITests">
                <methods>
                    <include name="AONE_14244"/>
                    <exclude name=".*"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Favourite API tests">
        <classes>
            <class name="org.alfresco.share.api.FavouriteAPITests">
                <methods>
                    <include name="AONE_14251"/>
                    <exclude name=".*"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="UserTrashcan API tests">
        <classes>
            <class name="org.alfresco.share.api.UserTrashcanApiTests"/>
        </classes>
    </test>

    <test name="People API tests">
        <classes>
            <class name="org.alfresco.share.api.PeopleAPITests">
                <methods>
                    <include name="AONE_14223"/>
                    <exclude name=".*"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>