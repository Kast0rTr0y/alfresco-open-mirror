<?xml version="1.0" encoding="UTF-8"?>

<!--  Cloud Site Invitation Workflow Model -->

<model name="siwf:cloud-site-invitation-workflow-model" xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
        <import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm" />
    </imports>
    
    <namespaces>
        <namespace uri="http://www.alfresco.org/model/workflow/cloud/siteinvitation/1.0" prefix="siwf" />
    </namespaces>
    
    <types>
        
      <!--  Custom Tasks -->
      <type name="siwf:sendSiteInvitationTask">
         <parent>bpm:startTask</parent>
         <mandatory-aspects>
             <aspect>siwf:cloudInvitationInitialProperties</aspect>
         </mandatory-aspects>
      </type>
      
      <type name="siwf:sendInvitationEmail">
         <parent>bpm:workflowTask</parent>
         <mandatory-aspects>
             <aspect>siwf:cloudInvitationInitialProperties</aspect>
         </mandatory-aspects>
      </type>
      
      <type name="siwf:invitationAcceptancePendingTask">
         <parent>bpm:workflowTask</parent>
         <mandatory-aspects>
             <aspect>siwf:cloudInvitationInitialProperties</aspect>
         </mandatory-aspects>
      </type>
      
      <type name="siwf:siteIngressTask">
         <parent>bpm:workflowTask</parent>
         <mandatory-aspects>
             <aspect>siwf:cloudInvitationInitialProperties</aspect>
             <aspect>siwf:invitationAcceptanceProperties</aspect>
         </mandatory-aspects>
      </type>
   </types>
   
   <aspects>
      <aspect name="siwf:cloudInvitationInitialProperties">
          <properties>
            <property name="siwf:inviterEmail">
               <type>d:text</type>
            </property>
            <property name="siwf:inviterFirstName">
               <type>d:text</type>
            </property>
            <property name="siwf:inviterLastName">
               <type>d:text</type>
            </property>
            <property name="siwf:inviteeEmail">
               <type>d:text</type>
            </property>
            <property name="siwf:key">
               <type>d:text</type>
            </property>
            <property name="siwf:siteShortName">
               <type>d:text</type>
            </property>
            <property name="siwf:siteTitle">
               <type>d:text</type>
            </property>
            <property name="siwf:inviteeRole">
               <type>d:text</type>
            </property>
            <property name="siwf:siteTenantId">
               <type>d:text</type>
            </property>
            <property name="siwf:siteTenantTitle">
               <type>d:text</type>
            </property>
          </properties>
      </aspect>
      
      <aspect name="siwf:invitationAcceptanceProperties">
          <properties>
            <property name="siwf:inviteeFirstName">
               <type>d:text</type>
            </property>
            <property name="siwf:inviteeLastName">
               <type>d:text</type>
            </property>
          </properties>
      </aspect>
   </aspects>
</model>
