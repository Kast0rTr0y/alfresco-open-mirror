      <property name="passwordEncoder">
         <ref bean="passwordEncoder" />
      </property>
   </bean>
   -->
   
   <!-- END MD4 -->

   <!-- SHA256 DAO and Authentication Provider -->
 
   <bean id="authenticationDao_raw" class="org.alfresco.module.org_alfresco_module_cloud.authentication.CloudAuthenticationPassword2Dao">
      <property name="nodeService" ref="nodeService" />
      <property name="authorityService" ref="authorityService_tenant" />
      <property name="namespaceService" ref="namespaceService" />
      <property name="passwordEncoder" ref="noOpPasswordEncoder" />
      <property name="sha256PasswordEncoder" ref="sha256PasswordEncoder" />
      <property name="policyComponent" ref="policyComponent" />
      <property name="authenticationCache" ref="authenticationCache" />
      <property name="tenantService" ref="authenticationDaoTenantService" />
      <property name="MTTenantService" ref="tenantService"/>
      <property name="singletonCache" ref="immutableSingletonCache"/>
      <property name="transactionService" ref="transactionService" />
   </bean>

   <bean id="daoAuthenticationProvider" class="net.sf.acegisecurity.providers.dao.DaoAuthenticationProvider">
      <property name="authenticationDao">
         <ref bean="authenticationDao" />
      </property>
      <property name="saltSource">
         <ref bean="saltSource" />
      </property>
      <property name="passwordEncoder">
         <ref bean="sha256PasswordEncoder" />
      </property>
   </bean>
   
   <!-- END SHA256 -->

   <bean id="authenticationManager" class="net.sf.acegisecurity.providers.ProviderManager">
      <property name="providers">
         <list>
            <ref bean="authenticatedAuthenticationPassthroughProvider" />
            <ref bean="daoAuthenticationProvider" />
         </list>
      </property>
   </bean>

   <alias alias="saltSource" name="authenticationDao" />
   
   <!-- User Directory Service -->
   
   <bean id="localDirectoryService_raw" class="org.alfresco.module.org_alfresco_module_cloud.directory.DirectoryServiceImpl">
       <property name="emailAddressService" ref="emailAddressService"/>
       <property name="mutableAuthenticationService" ref="localAuthenticationService"/>
       <property name="repositoryAuthenticationDao" ref="authenticationDao_raw"/>
       <property name="nodeService" ref="nodeService"/>
       <property name="userNamesAreCaseSensitive" value="${user.name.caseSensitive}"/>
       <property name="transactionService" ref="transactionService" />
   </bean>

    <bean id="localDirectoryService" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="proxyInterfaces">
            <list>
                <value>org.alfresco.module.org_alfresco_module_cloud.directory.DirectoryService</value>
            </list>
        </property>
        <property name="target">
            <ref bean="localDirectoryService_raw"/>
        </property>
        <property name="interceptorNames">
            <list>
                <idref bean="runAsDefaultTenantInterceptor"/>
            </list>
        </property>
    </bean>

   <!-- Enable control over mapping between request and user ID -->
   <bean id="remoteUserMapper" class="org.alfresco.repo.security.authentication.external.DefaultRemoteUserMapper">
      <property name="active">
         <value>${alfresco.authentication.cloud.enabled}</value>
      </property>
      <property name="proxyUserName">
         <value>${alfresco.authentication.cloud.proxyUserName}</value>
      </property>
      <property name="personService">
         <ref bean="PersonService" />
      </property>
   </bean>

</beans>