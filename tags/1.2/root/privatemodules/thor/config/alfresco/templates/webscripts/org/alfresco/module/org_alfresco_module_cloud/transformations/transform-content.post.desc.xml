<webscript>
  <shortname>Transform Content (transform-content)</shortname>
  <description>
  <![CDATA[
  Transforms the content posted to the webscript and streams the transformed content back
  ]]>
  </description>
  
  <!-- by object id -->
  <url>/content/transform</url>
  <url>/content/transform/check</url>

  <format default="">argument</format>
  
  <transaction allow="readonly" buffersize="-1">none</transaction>
  <authentication runas="admin">none</authentication>
  <family>Transformation</family>
  <lifecycle>public_api</lifecycle>
</webscript>