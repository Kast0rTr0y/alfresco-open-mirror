<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

<!--
Inbound settings from iBatis
    <settings
    lazyLoadingEnabled="false"
    enhancementEnabled="false"
    maxTransactions="500"
    maxSessions="500"
    /> 
 -->

    <typeAliases>
    
        <!-- General -->
        <typeAlias alias="Ids" type="org.alfresco.ibatis.IdsEntity"/>
    
        <!-- Accounts-->
        <typeAlias alias="Account" type="org.alfresco.module.org_alfresco_module_cloud.accounts.domain.AccountEntity"/>
 
        <!-- InvalidDomains -->
        <typeAlias alias="InvalidDomain" type="org.alfresco.module.org_alfresco_module_cloud.emailaddress.domain.InvalidDomainEntity"/>
        <typeAlias alias="StoreUsage" type="org.alfresco.module.org_alfresco_module_cloud.usage.StoreUsageEntity"/>
        
        <!-- Account CQ -->
        <typeAlias alias="AccountCannedQueryParams" type="org.alfresco.module.org_alfresco_module_cloud.accounts.AccountCannedQueryParams"/>
        
    </typeAliases>
    
    <typeHandlers> 
        <typeHandler javaType="java.io.Serializable" jdbcType="BLOB" handler="org.alfresco.ibatis.SerializableTypeHandler"/>
    </typeHandlers>
        
    <mappers>
        
        <!-- Accounts -->
        <mapper resource="alfresco/module/org_alfresco_module_cloud/ibatis/#resource.dialect#/accounts-common-SqlMap.xml"/>
        <!-- Invalid Domains -->
        <mapper resource="alfresco/module/org_alfresco_module_cloud/ibatis/#resource.dialect#/invaliddomains-common-SqlMap.xml"/>
        
        <!-- Tenant Usages -->
        <mapper resource="alfresco/module/org_alfresco_module_cloud/ibatis/#resource.dialect#/query-tenant-usages-common-SqlMap.xml"/>
        
    </mappers>
    
</configuration>
