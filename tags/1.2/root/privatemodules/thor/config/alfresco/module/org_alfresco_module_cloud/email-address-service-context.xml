<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <bean id="emailAddressService" class="org.alfresco.module.org_alfresco_module_cloud.emailaddress.EmailAddressServiceImpl">
        <property name="reachableCheckEnabled"><value>${dev.email.reachablecheck.enabled}</value></property>
        <property name="invalidDomainDAO" ref="invalidDomainDAO" />
    </bean>
    
    <bean id="invalidDomainDAO" class="org.alfresco.module.org_alfresco_module_cloud.emailaddress.domain.InvalidDomainDAOImpl">
        <property name="sqlSessionTemplate" ref="cloudSqlSessionTemplate"/>
    </bean>
    
    <!-- This helper bean is used to send various emails e.g. signup, invitation emails.
         Having a bean like this allows us to centralise some ActionService workarounds that are needed.
         -->
    <bean id="cloudEmailHelper" class="org.alfresco.module.org_alfresco_module_cloud.util.EmailHelper">
        <property name="actionService" ref="ActionService"/>
    </bean>
</beans>
