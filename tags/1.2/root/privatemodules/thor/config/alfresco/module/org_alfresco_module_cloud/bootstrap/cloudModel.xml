<model name="cloud:cloudmodel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

  <description>Cloud Model Definitions</description>
  <version>1.0</version>

  <imports>
    <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
  </imports>

  <namespaces>
    <namespace uri="http://www.alfresco.org/model/cloud/1.0" prefix="cloud" />
  </namespaces>

  <aspects>

    <aspect name="cloud:accounts">
      <properties>
        <property name="cloud:homeAccountId">
          <title>Home Account Id</title>
          <type>d:long</type>
          <protected>true</protected>
          <mandatory>false</mandatory>
          <multiple>false</multiple>
          <index enabled="true">
            <tokenised>false</tokenised>
          </index>
        </property>
        <property name="cloud:secondaryAccountIds">
          <title>Secondary Account Ids</title>
          <type>d:long</type>
          <protected>true</protected>
          <mandatory>false</mandatory>
          <multiple>true</multiple>
          <index enabled="true">
            <tokenised>false</tokenised>
          </index>
        </property>
        
        <property name="cloud:defaultAccountId">
          <title>Default Account Id</title>
          <type>d:long</type>
          <protected>true</protected>
          <mandatory>false</mandatory>
          <multiple>false</multiple>
          <index enabled="true">
            <tokenised>false</tokenised>
          </index>
        </property>
      </properties>
    </aspect>
    
    <!-- marked on external people -->
    <aspect name="cloud:personExternal">
      <properties>
        <property name="cloud:tenantSrcDst">
          <title>Marker property</title>
          <type>d:text</type>
          <protected>true</protected>
          <mandatory>false</mandatory>
        </property>
      </properties>
    </aspect>
    
    <!-- Marker aspect for network admins - placed on the cm:person node in the tenant for which the user is a network admin -->
    <aspect name="cloud:networkAdmin"/>
    
  </aspects>
  
</model>