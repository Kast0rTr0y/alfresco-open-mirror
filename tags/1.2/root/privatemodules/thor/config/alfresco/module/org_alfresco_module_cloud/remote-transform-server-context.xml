<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN 2.0//EN' 'http://www.springframework.org/dtd/spring-beans-2.0.dtd'>

<beans>
    <!-- Content Retrieval -->
    <bean id="webscript.org.alfresco.module.org_alfresco_module_cloud.transformations.transform-content.post"
        class="org.alfresco.module.org_alfresco_module_cloud.webscripts.TransformContent"
        parent="webscript" init-method="init">
        <property name="contentService" ref="ContentService" />
        <property name="mimetypeService" ref="MimetypeService" />
        <property name="contentTransformerRegistry" ref="contentTransformerRegistry" />
        <property name="delegate" ref="webscript.content.streamer" />
        <property name="classes">
            <list>
                <value>org.alfresco.service.cmr.repository.TransformationOptions</value>
                <value>org.alfresco.service.cmr.repository.CropSourceOptions</value>
                <value>org.alfresco.service.cmr.repository.PagedSourceOptions</value>
                <value>org.alfresco.service.cmr.repository.TemporalSourceOptions</value>
                <value>org.alfresco.repo.content.transform.magick.ImageTransformationOptions</value>
                <value>org.alfresco.repo.content.transform.RuntimeExecutableContentTransformerOptions</value>
                <value>org.alfresco.repo.content.transform.swf.SWFTransformationOptions</value>
            </list>
        </property>
    </bean>
</beans>
