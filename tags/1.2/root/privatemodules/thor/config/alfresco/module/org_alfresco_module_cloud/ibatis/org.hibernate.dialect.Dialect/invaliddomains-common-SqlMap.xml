<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="alfresco.invaliddomains">

    <!--                -->
    <!-- Result Maps    -->
    <!--                -->
    
    <resultMap id="result_InvalidDomain" type="InvalidDomain">
        <result property="id" column="id"/>
        <result property="domain" column="domain"/>
        <result property="type" column="type"/>
        <result property="note" column="note"/>
    </resultMap>
    
    
    <!--                -->
    <!-- SQL Snippets   -->
    <!--                -->
    
    <!-- id is auto-incremented by the DB . See AlfrescoCreate-BlacklistTables.sql -->
    <insert id="insert_InvalidDomain" parameterType="InvalidDomain" useGeneratedKeys="true" keyProperty="id">
        insert into alf_blacklist (domain, type, note) values (#{domain}, #{type}, #{note})
    </insert>
    
    <delete id="delete_InvalidDomain" parameterType="InvalidDomain">
        delete from alf_blacklist where domain = #{domain}
    </delete>
    
    <select id="select_InvalidDomain" resultMap="result_InvalidDomain">
        select
            id,
            domain,
            type,
            note
        from
            alf_blacklist
        where
            domain = #{domain}
    </select>

    <select id="select_AllInvalidDomains" resultMap="result_InvalidDomain">
        select
            id,
            domain,
            type,
            note
        from
            alf_blacklist
    </select>
    
    <select id="select_InvalidDomainCount" resultType="int">
        select count(*) from alf_blacklist
    </select>
    
    <update id="update_InvalidDomain" parameterType="InvalidDomain">
        update
            alf_blacklist
        set
            type = #{type},
            note = #{note}
        where
            domain = #{domain}
    </update>
</mapper>