<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>amp</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>net.java.dev.jets3t:jets3t</include>
                <include>com.amazonaws:aws-java-sdk</include>
                <include>com.jamesmurty.utils:java-xmlbuilder</include>
                <include>org.alfresco:alfresco-cloud</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>config</directory>
            <excludes>
                <exclude>**/module.properties</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>config/alfresco/module/org_alfresco_module_cloud/module.properties</source>
            <outputDirectory></outputDirectory>
        </file>
    </files>
</assembly>
