<?xml version='1.0' encoding='UTF-8'?>
<page>
   <title>Reset Password</title>
   <description>Page where a new password can be provided</description>
   <template-instance>simple-guest</template-instance>
   <authentication>guest</authentication>
   <components>

      <!-- Site Invite profile  -->
      <component>
         <region-id>components</region-id>
         <url>/cloud/core/components/account/reset-password</url>
         <properties>
            <pid>{id}</pid>
            <key>{key}</key>
         </properties>
      </component>

   </components>
</page>