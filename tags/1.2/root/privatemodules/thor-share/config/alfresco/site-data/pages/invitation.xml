<?xml version='1.0' encoding='UTF-8'?>
<page>
   <title>Cloud Invite</title>
   <description>Page for accepting/rejecting invitations</description>
   <template-instance>simple-guest</template-instance>
   <authentication>none</authentication>
   <components>

      <!-- Site Invite profile  -->
      <component>
         <region-id>components</region-id>
         <url>/cloud/core/components/account/invite-completion</url>
         <properties>
            <key>{key}</key>
            <pid>{id}</pid>
            <reject>{reject}</reject>
            <alt-email>{alt-email}</alt-email>
         </properties>
      </component>

   </components>
</page>