<alfresco-config>
   
   <!-- Remote section - use Surf RequestCachingConnector to improve remoting performance -->
   <config evaluator="string-compare" condition="Remote">
      <remote>
         <!--  
            The following endpoints are provided to support requests containing tennant data. These endpoints
            will only be used when processing requests that contain tennant data 
         -->
         <connector>
            <id>alfresco</id>
            <name>Alfresco Connector</name>
            <description>Connects to an Alfresco instance using cookie-based authentication</description>
            <class>org.springframework.extensions.webscripts.RequestCachingConnector</class>
            <authenticator-id>alfresco-ticket</authenticator-id>
         </connector>
         
         <authenticator>
             <id>alfresco-ticket</id>
             <name>Alfresco Tenant Authenticator</name>
             <description>Alfresco Authenticator</description>
             <class>org.alfresco.module.org_alfresco_module_cloud_share.TenantAlfrescoAuthenticator</class>
         </authenticator>
         
         <endpoint>
             <id>alfresco-noauth</id>
             <name>Alfresco - unauthenticated access</name>
             <description>Access to Alfresco Repository WebScripts that do not require authentication but are tennant specific</description>
             <connector-id>alfresco</connector-id>
             <endpoint-url>http://localhost:8080/alfresco/a</endpoint-url>
             <identity>none</identity>
         </endpoint>
         
         <endpoint>
             <id>alfresco</id>
             <name>Alfresco - user access</name>
             <description>Access to Alfresco Repository WebScripts that require user authentication and require tennant data</description>
             <connector-id>alfresco</connector-id>
             <endpoint-url>http://localhost:8080/alfresco/a</endpoint-url>
             <identity>user</identity>
         </endpoint>
         
         <endpoint>
             <id>alfresco-feed</id>
             <name>Alfresco Feed</name>
             <description>Alfresco Feed - supports basic HTTP authentication via the EndPointProxyServlet and provide tennant data</description>
             <connector-id>http</connector-id>
             <endpoint-url>http://localhost:8080/alfresco/a</endpoint-url>
             <basic-auth>true</basic-auth>
             <identity>user</identity>
         </endpoint>
      </remote>
   </config>
   
</alfresco-config>