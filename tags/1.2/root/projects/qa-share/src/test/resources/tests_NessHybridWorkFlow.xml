<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="HybridWorkFlow" verbose="1" preserve-order="true"
	parallel="tests" thread-count="1">
	<groups>
		<run>
			<exclude name="DataPrep.*" />
			<include name="Hybrid" />
			<exclude name="NonGrid" />
		</run>
	</groups>

	<listeners>
		<listener
			class-name="org.alfresco.webdrone.testng.listener.ScreenshotHTMLReporter" />
	</listeners>

	<test name="HybridSyncNegativeTests3" verbose="1">
		<classes>
			<class name="org.alfresco.share.cloudsync.HybridSyncNegativeTests3" />
		</classes>
	</test>

	<test name="HybridSyncNegativeTests2" verbose="1">
		<classes>
			<class name="org.alfresco.share.cloudsync.HybridSyncNegativeTests2" />
		</classes>
	</test>

	<test name="Advanced Workflow Scenarios" verbose="1">
		<classes>
			<class name="org.alfresco.share.workflow.AdvancedScenariosWorkflowTests" />
		</classes>
	</test>

	<test name="Recreate Workflow" verbose="1">
		<classes>
			<class
				name="org.alfresco.share.workflow.actionsWithDocuments.RecreateWorkflowTests" />
		</classes>
	</test>

	<test name="Hybrid Sync Positive Tests" verbose="1">
		<classes>
			<class name="org.alfresco.share.cloudsync.HybridSyncPositiveTests" />
		</classes>
	</test>

	<test name="CompleteWorkflowTests" verbose="1">
		<classes>
			<class name="org.alfresco.share.workflow.CompletedWorkflowSyncedTests" />
		</classes>
	</test>

	<test name="IncompleteWorkflowTests" verbose="1">
		<classes>
			<class name="org.alfresco.share.workflow.IncompleteWorkflowTests" />
		</classes>
	</test>

	<test name="AfterCompletionActionsWorkflowTests" verbose="1">
		<classes>
			<class name="org.alfresco.share.workflow.WorkflowOptionsTests" />
