<?xml version='1.0' encoding='UTF-8'?>

<!-- Audit Configuration for the Sync Service -->

<Audit
    xmlns="http://www.alfresco.org/repo/audit/model/3.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.alfresco.org/repo/audit/model/3.2 alfresco-audit-3.2.xsd"
    >
   
   
   <DataExtractors>
      <DataExtractor name="simpleValue" registeredName="auditModel.extractor.simpleValue"/>
   </DataExtractors>
   
   <PathMappings>
      <PathMap source="/sync" target="/sync"/>
   </PathMappings>
   
   <Application name="Alfresco Sync Service" key="sync">
      <AuditPath key="ssdid">
         <RecordValue key="value" dataExtractor="simpleValue"/>
      </AuditPath>
      <AuditPath key="srcRepoId">
         <RecordValue key="value" dataExtractor="simpleValue"/>
      </AuditPath>
      <AuditPath key="eventId">
         <RecordValue key="value" dataExtractor="simpleValue"/>
      </AuditPath>
      <AuditPath key="noderef">
         <RecordValue key="value" dataExtractor="simpleValue"/>
      </AuditPath>
      <AuditPath key="noderefOther">
         <RecordValue key="value" dataExtractor="simpleValue"/>
      </AuditPath>
      <AuditPath key="nodetype">
         <RecordValue key="value" dataExtractor="simpleValue"/>
      </AuditPath>
      <AuditPath key="aspect">
         <RecordValue key="value" dataExtractor="simpleValue"/>
      </AuditPath>
      <AuditPath key="node-props">
         <RecordValue key="value" dataExtractor="simpleValue"/>
      </AuditPath>
      <AuditPath key="content-url">
         <RecordValue key="value" dataExtractor="simpleValue"/>
      </AuditPath>
   </Application>
</Audit>
