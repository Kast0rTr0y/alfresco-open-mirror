<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>


<!--
    Enterprise Repository Bootstrap Sequence.
-->

<beans>

    <!--  Start jodconverter/OpenOffice.org extractor/transformer Subsystem. -->
    <bean id="OOoJodconverter" class="org.alfresco.repo.management.subsystems.ChildApplicationContextFactory" parent="abstractPropertyBackedBean">
        <property name="autoStart">
            <value>true</value>
        </property>
    </bean>
    
    <bean id="hybridWorkflowModelBootstrap" parent="dictionaryModelBootstrap" depends-on="dictionaryBootstrap">
        <property name="models">
            <list>
                 <value>alfresco/workflow/hybridWorkflowModel.xml</value>
            </list>
        </property>
     </bean>
    
    <bean id="clusteringBootstrap" class="org.alfresco.enterprise.repo.cluster.core.ClusteringBootstrap">
        <!-- Note that the unproxied "clusterService" is being used (transactions handled elsewhere) -->
        <property name="clusterService" ref="clusterService"/>
        <property name="cacheFactory" ref="cacheFactory"/>
        <property name="lockStoreFactory" ref="lockStoreFactory"/>
        <property name="messengerFactory" ref="messengerFactory"/>
        <property name="hibernateCacheProvider" ref="hibernateCacheProvider"/>
        <property name="transactionService" ref="transactionService"/>
        <property name="hazelcastInstanceFactory" ref="hazelcastInstanceFactory"/>
        <property name="descriptorService" ref="DescriptorService"/>
    </bean>
</beans>
